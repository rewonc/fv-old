<div class="place-listings-header">
  <h3 class="place-listings-header-text">Listings for weekend of Nov 8<span class="super-script">th</span> and 9<span class="super-script">th</span> </h3>
      <span class="update-timestamp">Last updated Thurs, Nov 7</span>
</div>

<div class="place-listings-filter row">
  <dl class="filter-categories sub-nav">
    <dd {{bindAttr class="filterCategories.all:active"}}><a {{action clearFilters}}>All</a></dd>
    <dd {{bindAttr class="filterCategories.vegetables:active :filter-option"}}><a {{action filterBy "vegetables"}}>Vegetables</a></dd>
    <dd {{bindAttr class="filterCategories.fruits:active :filter-option"}}><a {{action filterBy "fruits"}}>Fruits</a></dd>
    <dd {{bindAttr class="filterCategories.meat:active :filter-option"}}><a {{action filterBy "meat"}}>Meat and Seafood</a></dd>
    <dd {{bindAttr class="filterCategories.dairy:active :filter-option"}}><a {{action filterBy "dairy"}}>Dairy</a></dd>
    <dd {{bindAttr class="filterCategories.baked:active :filter-option"}}><a {{action filterBy "baked"}}>Baked Goods</a></dd>
    <dd {{bindAttr class="filterCategories.products:active :filter-option"}}><a {{action filterBy "products"}}>Other good stuff</a></dd>
  </dl>
</div>

<table class="listings">
  <tr>
    <th><a {{action sortBy "category"}}>Category</a></th>
    <th><a {{action sortBy "description"}}>Description</a></th>
    <th><a {{action sortBy "price"}}>Price</a></th>
    <th><a {{action sortBy "farm.methodology"}}>Method</a></th>
    <th><a {{action sortBy "farm.name"}}>Farm</a></th>
    <th>Add to your list</th>
  </tr>

  {{#each listing in filtered}}
    {{render 'listing_item' listing}}
  {{/each}}
</table>
