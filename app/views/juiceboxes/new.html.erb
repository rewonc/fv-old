        <div class="small-12 columns centered">
          <span class="back-button"><a>Select a different box</a></span>
        </div>
      </div>

      
    </div>
  </div>
</section>



<div class="form">
  <%= form_for @juicebox, url: juiceboxes_path, :html => {"data-abide" => ''} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<!-- module chooser -->
   <%= render 'shared/module_choice_juicing', f: f %>
     
<!--  begin delivery preferences -->
  <div id="delivery_preferences">
    <%= render 'shared/delivery_preferences', f: f %>
  </div>

 <% end %>
</div>
