<h1>Edit Product </h1>

<%= form_for @product, url: farm_product_path do |f| %>

  <p>
    <%= f.label :'Title' %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :Price %><br>
    <%= f.text_field :price %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>