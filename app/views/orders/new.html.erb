<h1>New order</h1>
<h5><%= @name.inspect %> </h5>
<h5><%= session[:referrer].inspect %> </h5>

<!-- User Form -->
<form action="" method="POST" id="registration-form">
  <span class="registration-errors"></span>
  <span>Email for user registration</span>
  <input type="text" id="user_email" placeholder="email"></input>
  <span>Password</span>
  <input type="text" id="user_password" placeholder="password"></input>
  <span>Password confirmation</span>
  <input type="text" id="user_password_confirm" placeholder="password confirm"></input>
</form>

<!-- CC Form -->
<form action="" method="POST" id="payment-form">
  <span class="payment-errors"></span>
  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input type="text" size="2" data-stripe="exp-month"/>
    </label>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year"/>
  </div>
</form>

<!-- Order Form -->
<%= render 'form' %>

<!-- Stripe JS -->
<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript">
  Stripe.setPublishableKey('<%= Rails.configuration.stripe[:publishable_key] %>');
</script>
