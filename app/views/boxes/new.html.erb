<section class="intro">
  <div class="row">
    <div class="small-12 centered columns">
      <h1 class="header-main">Pick the box that's right for you.</h1>
      <p class="header-indent">Now delivering to New Haven, CT.  <a href="#">More locations </a></p>
      <p class="ribbon">Free delivery for orders over $40!</p>
    </div>
  </div>
</section>

<div class="form">
  <%= form_for @box, url: boxes_path do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <section class="select"> <!-- start tabs -->
    <div class="row"> 
      <div class="small-12 columns">
        <dl class="tabs three-up mobile" data-tab>
          <dd data-selection="1">
            <a href="#panel2-1">
              <div class="profiles">
                <h2>some text</h2>
                <p>some text, graphic</p>
                <p> <%= f.radio_button(:box_num, 1) %><%= f.label(:box_1, "Raw & Ready") %></p>
              </div>
            </a>
          </dd>
          <dd class="active" data-selection="2">
            <a href="#panel2-2">
              <div class="profiles">
                <h2>some text</h2>
                <p>some text, graphic</p>
                <p><%= f.radio_button(:box_num, 2, checked: true) %><%= f.label(:box_2, "Culinary") %>
      </p>
              </div>
            </a>
          </dd>
          <dd data-selection="3">
            <a href="#panel2-3">
              <div class="profiles">
                <h2>some text</h2>
                <p>some text</p>
                <p><%= f.radio_button(:box_num, 3) %><%= f.label(:box_3, "Custom") %>
</p>
              </div>
            </a>
          </dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <div class="tab-connected">
          <div class="tabs-content-custom">
            <div class="content" id="panel2-1">
              <div class="row">
                <div class="small-9 large-6 columns large-centered small-centered centered">
                  <p>First panel content goes here...</p>
                </div>
              </div>
            </div>
            <div class="content active" id="panel2-2">
              <div class="row">
                <div class="small-9 large-6 columns large-centered small-centered centered">
                  <p>Second panel content goes here...</p>
                </div>
              </div>
            </div>
            <div class="content" id="panel2-3">
              <div class="row">
                <div class="small-9 large-6 columns large-centered small-centered centered">
                  <p>Third panel content goes here...</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <div class="tab-connected tab-bottom">
          <ul class="box-options medium-block-grid-3">
            <%# BOX OPTION%>
              <li>
                <ul class="box-option">
                  <li class="title">Las crudas </li>
                  <li class="price">[photo?]</li>
                  <li class="description">Greens, yadayada</li>
                  <li class="bullet-item">Fruit, salad greens, carrots, celery, etc</li>
                  <li class="bullet-item no-js-desc">Select amount below. 0=none, 1=size of sample, 2=more variety and quantity, 3=max variety and quantity</li>
                  <li class="bullet-item" id="raw_ind">blah
                  </li>
                  <li class="cta-button" data-module="1">
                    <%= f.select :raw_num, options_for_select([0,1,2,3], selected: 1) %>
                   </li>
                  
                </ul>
              </li>

              <%# BOX OPTION%>
              <li>
                <ul class="box-option">
                  <li class="title">les culinaires</li>
                  <li class="price">[photo?]</li>
                  <li class="description">Rutabagas, etc</li>
                  <li class="bullet-item">Fruit, greens, root vegetables, and more</li>
                  <li class="bullet-item no-js-desc">Select amount below. 0=none, 1=size of sample, 2=more variety and quantity, 3=max variety and quantity</li>
                  <li class="bullet-item" id="cook_ind">
                    default
                  </li>
                  <li class="cta-button" data-module="2"><%= f.select :cook_num, options_for_select([0,1,2,3], selected: 1) %></li>
                </ul>
              </li>

              <%# BOX OPTION%>
              <li>
                <ul class="box-option">
                  <li class="title">Les Fruits</li>
                  <li class="price">[photo?]</li>
                  <li class="description">Apples oranges pears grape.</li>
                  <li class="bullet-item">Fruit, greens, root vegetables, and more</li>
                  <li class="bullet-item no-js-desc">Select amount below. 0=none, 1=size of sample, 2=more variety and quantity, 3=max variety and quantity</li>
                  <li class="bullet-item" id="fruit_ind">
                    fruit defualt
                  </li>
                  <li class="cta-button" data-module="3"><%= f.select :fruit_num, options_for_select([0,1,2,3], selected: 1) %></li>
                </ul>
              </li>
          </ul>

          <div class="row">
            <div class="small-2 columns small-offset-10">
              <p id="price">Price here</p>
            </div>
          </div>
        </div>
      </div>
    </div>


  </section><!-- end tabs -->


     
      
<div class="row">
  <div class="small-12 small-centered columns">
    <fieldset>
        <%# BOX OPTIONS ===================================%>

        <div class="row">
          <div class="large-12 large-centered columns">
            <h3 class="subheader">2. Select your preferences</h3>
          </div>
        </div>

        <!--
        <div class="row">
          <div class="large-12 columns panel">
            <p><strong>Subscription packages</strong><br />
              Contact us for discounted rates on 1 month, 3 month upfront subscriptions at <%= mail_to "hello@farmivore.com","hello@farmivore.com" %>
            </p>
          </div>
        </div>-->
        <div class="row">
          <div class="large-12 columns">
            <p>We currently deliver to locations within the city of New Haven.</p>
            <p>We deliver all our orders on Saturday in order to ensure all our customers receive high quality produce that has never been stored in our warehouses.</p>
            <p>We are currently beta testing Wednesday delivery. If you'd like to sign up for a Wednesday delivery, email us at <%= mail_to "hello@farmivore.com","hello@farmivore.com" %>.

          </div>
        </div>

        <div class="row">

          <div class="large-6 columns">
            <%= f.text_field :firstname, :placeholder => "Your first name" %>
          </div>
          <div class="large-6 columns">
            <%= f.text_field :lastname, :placeholder => "Last name"%>
          </div>
        </div>

        <div class="row">

          <div class="large-5 columns">
            <%= f.text_field :email, :placeholder => "Your email address" %>
          </div>
          <div class="large-3 columns"><%= f.text_field :phone, :placeholder => "Your phone number" %> </div>
          <div class="large-4 columns">&nbsp;</div>
        </div>


      <div class="row">
        <div class="large-8 columns">
          <p><em>Your delivery address</em><br />
            <div class="row">
              <div class="large-12 columns">
               <%= f.text_field :street, :placeholder => "Street address line 1" %>
               <%= f.text_field :street2, :placeholder => "Street address line 2" %>
              </div>
            </div>
            <div class="row">
              <div class="large-4 columns"><%= f.text_field :city, :placeholder => "City" %></div>
              <div class="large-4 columns"><%= f.text_field :state, :placeholder => "State" %></div>
              <div class="large-4 columns"><%= f.text_field :zip, :placeholder => "Zip" %></div>
            </div>
          </p>
        </div>
      </div>

      <div class="row">
          <div class="large-12 columns">
            <!--
            <ul class="inline-list">
              <li><%= f.radio_button(:frequency, 1) %>
              <%= f.label(:weekly, "Once per week") %></li>
              <li><%= f.radio_button(:frequency, 2) %>
              <%= f.label(:biweekly, "Once per two weeks") %></li>
            </ul>-->
            <p>I want my first delivery on the following date:<br/>
              <%= f.select(:startdate, options_for_select([["Saturday, Dec 21","Sat Dec 21"],["Saturday, January 4", "Sat Jan 4"],["Saturday, January 11", "Sat Jan 11"]])) %>
              <%= f.check_box(:text_me) %>
              <%= f.label(:text_me, "Notify me by text the status of my delivery on Saturday morning") %>
            </p>
          </div>
        </div>

        <div class="row">
          <div class="large-12 columns">
            <p>We deliver your box as early as possible on Saturday. If you have a preferred time of delivery, however, please note it below and we will try and accomodate you.<br />
              <%= f.select(:delivery_preference, options_for_select([["No preference",1],["Saturday morning, 8am-10am",2],["Saturday lunch, 10am-12pm",2],["Saturday afternoon, 12pm-2pm",3],["Saturday evening, 3pm-5pm",4]])) %>
            </p>
          </div>
        </div>

      <div class="row">
        <div class="large-12 columns">
              <%= f.check_box(:call_me) %>
              <%= f.label(:call_me, "Call me when you arrive") %>
          <p>Please leave detailed instructions for the deliveryperson if you are not available. We cannot store your box overnight and must donate it if you are unavailable.</p>
          <%= f.text_area :instructions, :placeholder => "Examples: Buzz apartment #202, leave in foyer. --OR-- Leave with doorman.  --OR-- leave on back porch." %>
        </div>
      </div>


      <%= f.submit 'Checkout', class: "button" %>
  <% end %>
    </fieldset>
  </div>
</div>

